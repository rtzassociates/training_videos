<div class="heading">
  <h3><%= link_to @viewer.name.titleize, @viewer %></h3>
  <p class="muted large"><%= @viewer.email %></p>
  <p class="muted">Created on <%= @viewer.created_at.strftime("%A, %b %-d %Y,%l:%M %p") %></p>
  <p class="muted">Signed in with <%= @viewer.user.username %></p>
  <% if current_user.admin? %>
    <div class="actions">
      <%= link_to "Edit", edit_viewer_path(@viewer) %>
      <%= link_to "Delete", @viewer, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger" %>
    </div>
  <% end %>
  <div class="clearfix"></div>
  <hr>
</div>

<div id="comments">
  <div class="heading">
    <h3>Comments</h3>
  </div>
  <% if @viewer.comments.any? %>
    <% @viewer.comments.each do |comment| %>
      <div class="comment well">
        <h4>
          <%= link_to comment.viewer.name.titleize, comment.viewer %>
          <span class="muted small">Commented on <%= link_to comment.training_session.name, comment.training_session %></span>
        </h4>
        <p class="muted"><%= date_for comment.created_at %></p>
        <p><%= comment.content %><p>
        <div class="pull-right actions">
          <%= link_to "Delete", comment, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger" %>
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  <% else %>
    <div class="comment">
    <p>No comments to show.</p>
    </div>
  <% end %>
</div>

<div id="viewings">
  <h3>Viewed Training Sessions</h3>
  <p class="muted"><%= pluralize @viewer.viewings.count, "training session" %> <%= "has".pluralize(@viewer.viewings.count) %> been viewed by this user.</p>
  <br>
  <% if @viewings.any? %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Viewing Date</th>
          <th>Training Session</th>
          <th>Participants</th>
          <th>Completed?</th>
        </tr>
      </thead>
      <tbody>
        <%= render @viewings %>
      </tbody>
    </table>
  <% else %>
    <p>Nothing to show.</p>
  <% end %>
  <br>
  <p><%= link_to raw("&#8592; Return to training sessions"), site_training_sessions_path, :class => 'link-large' %></p>
</div>
