<div class="heading">
  <h1>All Training Sessions</h1>
  
  <% if current_user.admin? %>
    <br>
    <%= link_to 'Add A Topic', new_training_session_path, :class => "btn btn-large btn-success" %>
  <% end %>
  <hr>
</div>

<% if current_viewer && current_site.site_content.training_session_greeting.present? %>
  <div id="instructions" class="well">
    <h4>Hi <%= current_viewer.name.capitalize %>,</h4>
    <p><%= current_site.site_content.training_session_greeting %></p>
  </div>
<% end %>

<div class="heading">
  <h2>Currently Available Topics</h2>
  <% if current_user.admin? %>
    <%= link_to 'Change Order', order_training_sessions_path, :class => "action" %>
  <% end %> 
  <% if params[:order] == "desc" %>
    <%= link_to 'Oldest first', training_sessions_path(:order => 'asc'), :class => "action" %>
  <% else %>
    <%= link_to 'Newest first', training_sessions_path(:order => 'desc'), :class => "action" %>
  <% end %>
</div>

<% if @training_sessions.any? %>
  <div id="training_sessions">
    <% @training_sessions.each_with_index do |training_session, index| %>
      <%= render :partial => training_session, :locals => { :index => index } %>
    <% end %>
  </div>
<% else %>
  <p>Nothing to show</p>
<% end %>

<%= will_paginate @training_sessions %>