<h1><%= @category.name %></h1>

<% if can? :manage, @category %>
  <div class="actions">
    <%= link_to "Edit", edit_category_path(@category) %>
    <%= link_to "Destroy", @category, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger" %>
  </div>
<% end %>

<hr>

<div id="videos">
  <%= render @category.videos %>
</div>