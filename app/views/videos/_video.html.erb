<div class="video">
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= index + 1%>. <%= link_to video.name, new_viewing_path(:video_id => video.id) %>
      </h4>
      <p><%= date_for video.created_at %></p>
      <% if current_user.admin? %>
        <div class="actions">
          <%= link_to 'Edit', edit_video_path(video) %>
          <%= link_to 'Delete', video, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger" %>
        </div>
      <% end %>
    </div>
  </div>
  <hr>
</div>