<div class="row">
  <div class="user span12">
    <hr>
    <h3><%= link_to user.username, user %></h3>
    <h4 class="muted"><%= user.site.name unless user.site.nil? %></h3>
    <p class="muted">Created on <%= user.created_at.strftime("%A, %b %-d %Y,%l:%M %p") %></p>
    <p class="muted"><%= pluralize user.viewers.count, "viewer" %></p>
    <% if current_user.admin? %>
      <div class="actions pull-right">
        <%= link_to "Edit", edit_user_path(user) %>
        <%= link_to "Delete", user, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "danger" %>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
</div>