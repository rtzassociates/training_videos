<div id="viewings">
  <h1>Viewing Log</h1>
  <br>
  <div class="pull-left">
    <div id="date_select">
      <%= form_tag viewings_path, :class => 'form-horizontal', :style => 'padding-left:0px;', :method => 'get' do %>
        <%= text_field_tag :start_date, params[:start_date], :placeholder => "Start Date" %>
        <%= text_field_tag :end_date, params[:end_date], :placeholder => "End Date" %>
        <%= submit_tag "Submit", :name => nil, :class => 'btn' %>
      <% end %>
    </div>
  </div>
  <div class="pull-right">
  <%= form_tag viewings_path, :method => 'get', :class => "form-search" do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], :class => "input-medium search-query" %>
      <%= button_tag "Search", :name => nil, :class => "btn" %>
    </div>
  <% end %>
  </div>
  <div class="clearfix"></div>
  <hr>
  <h4>Showing <%= pluralize @viewings.count, 'viewing'%></h4>
  <br>
  <% if @viewings.any? %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Viewing Date</th>
          <th>Training Session</th>
          <th>Viewer Name</th>
          <th>Site Name</th>
          <th>Completed?</th>
        </tr>
      </thead>
      <tbody>
        <%= render @viewings %>
      </tbody>
    </table>
  <% else %>
    <p>Nothing to show.</p>
  <% end %>
  <%= will_paginate @viewings %>
  <br>
  <p><%= link_to raw("&#8592; Return to training sessions"), site_training_sessions_path, :class => 'link-large' %></p>
</div>